              <h2 class="home"> Do you drink enough? </h2></h1> <br />
          </div>
        </div>
      </div>
    </div>


    <!-- BUTTONS  -->
    <div class="container" id="margin3">
      <div class="row">
        <div class="col-md-offset-2 col-md-9">
          <h3 class="home">
            <br />Start measuring your water intake with Liquify!
          </h3>
          <div class="text-right">
            <a href="/signup"><button class="btn btn-secondary btn-lg roundsign">Sign Up</button></a>
          </div>
        </div>
      </div>
    </div>



    <% include templates/footer.ejs%>

  </body>
