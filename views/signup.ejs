<!DOCTYPE html>
<html lang="en">
<head>
    <% include templates/head.ejs%>
    <title>Liquify</title>
</head>
  <body>

    <div class="container" id="top-margin">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="text-center">

            <img id="logo" src="images/blue_logo.png" class="img-fluid" alt="Responsive image">
            <h1 class="signup">Liquify</h1>
            <%if (message.length > 0) {%>
              <div class = "flash">
                <%=message%>
              </div>

            <%}%>
            <form action="/signup" method="post" id = "signupform">
              <div >
                  <label>Email</label>
                  <br />
                  <input type="text" name="email">
              </div>
              <div >
                  <label>Password</label>
                  <br />
                  <input type="password" name="password" id ="password">
              </div>

              <div >
                  <label>Confirm Password</label>
                  <br />
                  <input type="password" name="confirmpassword">
              </div>

              <button class="btn btn-secondary" type="submit" >Signup</button>
              <br>
              <a class="to-signup" href="/login" style="font-size:16px;">Already have an account?</a>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% include templates/footer.ejs%>
    <script src="jquery.validate.min.js"></script>
    <script src="signup-validation.js"></script>
  </body>
</html>
