<!DOCTYPE html>
<html lang="en">
<head>
    <% include templates/head.ejs%>
    <title>Liquify</title>
</head>
  <body>

    <!-- LIQUIFY LOGO -->
    <div class="container" id="top-margin">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="text-center">
            <img id="logo" src="images/blue_logo.png" class="img-fluid" alt="Responsive image">
            <h1 class="login">Liquify</h1>

            <!-- LOGIN FORM -->
            <%if (message.length > 0) {%>
              <div class = "flash">
                <%=message%>
              </div>

            <%}%>

            <form action="/login" method="post" id= "loginform">
              <div>
                <label>Email</label>
                <br />
                <input type="text"  name="email">
              </div>
              <div>
                <label>Password</label>
                <br />
                <input type="password" name="password">
              </div>
              <button class="btn btn-secondary" type="submit">Login</button>
            </form>
            <div >
              <a class="to-signup" href="signup">CREATE A NEW ACCOUNT</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% include templates/footer.ejs%>
    <script src="jquery.validate.min.js"></script>
    <script src="login-validation.js"></script>
  </body>
</html>
